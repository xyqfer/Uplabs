<view class='card' wx:if='{{!loading}}'>
  <view class='img-container' style='background-color: {{backgroundColor}};'>
    <image class='preivew-img' 
      src='{{cover}}' 
      mode='widthFix' 
      lazy-load='true' 
      bindtap='showPreview' 
      data-urls='{{urls}}'>
    </image>
    <view class='label-container'>
      <view class='label count-label'>
        x{{urls.length}}
      </view>
      <view wx:if='{{animated}}' class='label gif-label'>
        GIF
      </view>
    </view>
  </view>
  <view class='info-container'>
    <view class='info-title'>
      {{name}}
    </view>
    <view class='info-desc'>
      {{desc}}
    </view>
  </view>
</view>

<view class='card' wx:if='{{loading}}'>
  <view class='card'>
    <view class='img-container'></view>
    <view class='info-container'>
      <view class='placeholder-inner'>
        <view class='placeholder-mask placeholder-mask-header-right'></view>
        <view class='placeholder-mask placeholder-mask-header-bottom'></view>
      </view>
    </view>
  </view>
</view>