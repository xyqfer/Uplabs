page {
  background-color: #ffffff;
}

.card-container {
  padding-bottom: 20rpx;
  font-family: -apple-system, "Helvetica Neue", miui, Helvetica, sans-serif;
}

.card-header {
  margin: 30rpx 40rpx 15rpx 40rpx;
  padding-bottom: 18rpx;
}

.card-header-title {
  position: relative;
  display: inline-block;
  font-size: 68rpx;
  color: rgba(0, 0, 0, .87);
  font-weight: 700;
  line-height: 82rpx;
}

.card-header-title::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  bottom: 10%; 
  z-index: -1;
}

.card-header-title-0::after {
  background: #ffccc7;
}

.card-header-title-1::after {
  background: #ffffb8;
}

.card-header-title-2::after {
  background: #ffd6e7;
}

.card-header-title-3::after {
  background: #d9f7be;
}

.card-header-title-4::after {
  background: #ffe7ba;
}

.card-header-title-5::after {
  background: #bae7ff;
}

.card-header-title-6::after {
  background: #efdbff;
}

.card-header-date {
  color: rgba(76, 87, 102, .5);
  font-size: 26rpx;
  font-weight: 400;
  margin-bottom: 12rpx;
}

.more-btn {
  margin: 50rpx 40rpx 60rpx 40rpx;
  background: #fff;
  font-size: 24rpx;
  color: #4c5766;
  font-weight: 500;
  line-height: 96rpx;
  border: 2rpx solid rgba(0, 0, 0, .05);
  border-radius: 8rpx;
  text-align: center;
}