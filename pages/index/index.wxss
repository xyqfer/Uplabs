.card-header {
  margin-bottom: 30rpx;
  text-align: center;
}

.card-header-title {
  font-size: 40rpx;
  color: rgba(0, 0, 0, .87);
  font-weight: 500;
}

.card-header-date {
  color: rgba(76, 87, 102, .5);
  line-height: 36rpx;
  font-size: 22rpx;
  font-weight: 400;
}

.more-btn {
  background: #fff;
  font-size: 24rpx;
  color: #4c5766;
  font-weight: 500;
  line-height: 96rpx;
  border: 2rpx solid rgba(0, 0, 0, .05);
  border-radius: 8rpx;
  text-align: center;
}